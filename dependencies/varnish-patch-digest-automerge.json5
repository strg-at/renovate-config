{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "varnish: automerge non major and non minor versions for integration and staging",
  packageRules: [
    {
      matchDepNames: ["varnish"],
      matchUpdateTypes: ["patch", "digest"],
      matchFileNames: ["**/integration/**"],
      additionalBranchPrefix: "integration-",
      commitMessageSuffix: "integration",
      addLabels: ["env/integration"],
      separateMinorPatch: false,
      automerge: true,
      automergeType: "pr",
      // automerges anytime between midnight and 5AM from Monday to Thursday
      automergeSchedule: ["* 0-5 * * 1-4"],
    },
    {
      matchDepNames: ["varnish"],
      matchUpdateTypes: ["patch", "digest"],
      matchFileNames: ["**/test|staging/**"],
      additionalBranchPrefix: "staging-",
      commitMessageSuffix: "staging",
      addLabels: ["env/staging"],
      separateMinorPatch: false,
      automerge: true,
      automergeType: "pr",
      // automerges anytime between midnight and 5AM from Monday to Thursday
      automergeSchedule: ["* 0-5 * * 1-4"],
    },
  ],
}
