{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "dependencies: opensearch",
  packageRules: [
    {
      description: "group: opensearch",
      matchDepNames: [
        "opensearchproject/opensearch",
        "opensearch",
        //"Aiven-Open/prometheus-exporter-plugin-for-opensearch",
        "Virtimo/prometheus-exporter-plugin-for-opensearch",
      ],
      groupName: "opensearch",
      semanticCommitScope: "{{groupName}}",
      commitMessageExtra: "to {{newVersion}}",
      group: {
        semanticCommitScope: "{{groupName}}",
        commitMessageTopic: "group",
        commitMessageExtra: "to {{newVersion}}",
      },
    },
    {
      description: "prevention: automerge opensearch",
      matchDepNames: [
        "opensearchproject/opensearch",
        "opensearch",
        "opensearch-project/opensearch-prometheus-exporter",
      ],
      matchUpdateTypes: ["major", "minor"],
      automerge: false,
    },
  ],
  customManagers: [
    {
      description: "regex: updates for opensearch prometheus-exporter plugin",
      customType: "regex",
      fileMatch: ["\\.ya?ml(\\.j2)?$"],
      matchStrings: [
        "https://github.com/opensearch-project/opensearch-prometheus-exporter/releases/download/(?<currentValue>\\d\\S+?)/prometheus-exporter-(?<currentValue2>\\S+?).zip",
      ],
      depNameTemplate: "opensearch-project/opensearch-prometheus-exporter",
      datasourceTemplate: "github-releases",
      versioningTemplate: "loose",
    },
  ],
}
