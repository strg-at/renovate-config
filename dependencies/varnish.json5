{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "dependencies: varnish",
  packageRules: [
    {
      description: "automerge: varnish patches",
      matchDepNames: ["varnish"],
      matchUpdateTypes: ["patch", "digest"],
      matchFileNames: [
        "**/devenv/**",
        "**/integration/**",
        "**/staging/**",
        "**/test/**",
      ],
      separateMinorPatch: true,
      automerge: true,
      automergeType: "pr",
      // automerges anytime between midnight and 5AM from Monday to Thursday
      automergeSchedule: ["* 0-5 * * 1-4"],
    },
    {
      description: "prevention: automerge varnish production",
      matchDepNames: ["varnish"],
      matchFileNames: ["**/production/**", "**/live/**"],
      automerge: false,
    },
  ],
}
